- if can? :create, User
  = link_to "Create New", new_user_path

table
  thead
    tr
      th Email
      th Role
      th Actions
  tbody
    - @users.each do |user|
      tr
        td = user.email
        td = user.role.name
        td
          - if can? :update, User
            = link_to "Edit", edit_user_path(user)
          - if can? :destroy, User
            = link_to 'Delete', user_path(user), method: :delete
